@using System.Diagnostics
@model IEnumerable<CharacterSheet>

@{
    ViewBag.Title = "Sheet list";
}

<div class="card-deck">
    @foreach (var sheet in Model)
    {
        <div class="card m-3" style="min-width:18rem; max-width:30.5%">
            <div class="card-header">
                <h3>@sheet.Name</h3>
            </div>
            <div class="card-body">
                <h4>Level: @sheet.Level</h4>
                <h4>Class: @sheet.Class</h4>
            </div>
            <div class="card-footer text-center">
                <a asp-action="SheetDetails" asp-controller="Game" 
                   asp-route-id="@sheet.Id"
                   class="btn btn-primary m-1">View</a>
                <a asp-action="SheetEdit" asp-controller="Game"
                   asp-route-id="@sheet.Id"
                   class="btn btn-primary m-1">Edit</a>
                <a asp-action="SheetDelete" asp-controller="Game" 
                   asp-route-id="@sheet.Id"
                   class="btn btn-danger m-1">Delete</a>
            </div>
        </div>
    }
</div>