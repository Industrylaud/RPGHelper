@model CreateSheetViewModel

@{ 
    ViewBag.Title = "Character sheet creation";
}

    <div class="row">
        <div class="col-md-10">
            <form method="post">
                <div asp-validation-summary="All" class="text-danger"></div>
               
                    <label asp-for="Name"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>

                    <label asp-for="Level"></label>
                    <input asp-for="Level" class="form-control" />
                    <span asp-validation-for="Level" class="text-danger"></span>

                    <label asp-for="Class"></label>
                    <input asp-for="Class" class="form-control " />

                    <label asp-for="Personality"></label>
                    <input asp-for="Personality" class="form-control" />

                    <label asp-for="Exp"></label>
                    <input asp-for="Exp" class="form-control" />
                    <span asp-validation-for="Exp" class="text-danger"></span>
         

           
                    <label asp-for="Strength"></label>
                    <input asp-for="Strength" class="form-control" />
                    <span asp-validation-for="Strength" class="text-danger"></span>

                    <label asp-for="Agility"></label>
                    <input asp-for="Agility" class="form-control" />
                    <span asp-validation-for="Agility" class="text-danger"></span>

                    <label asp-for="Condition"></label>
                    <input asp-for="Condition" class="form-control" />
                    <span asp-validation-for="Condition" class="text-danger"></span>

                    <label asp-for="Inteligence"></label>
                    <input asp-for="Inteligence" class="form-control" />
                    <span asp-validation-for="Inteligence" class="text-danger"></span>

                    <label asp-for="Wisdom"></label>
                    <input asp-for="Wisdom" class="form-control" />
                    <span asp-validation-for="Wisdom" class="text-danger"></span>

                    <label asp-for="Charisma"></label>
                    <input asp-for="Charisma" class="form-control" />
                    <span asp-validation-for="Charisma" class="text-danger"></span>
         

        
                    <label asp-for="ArmorClass"></label>
                    <input asp-for="ArmorClass" class="form-control" />

                    <label asp-for="Initative"></label>
                    <input asp-for="Initative" class="form-control" />

                    <label asp-for="Hp"></label>
                    <input asp-for="Hp" class="form-control" />

                    <label asp-for="HpTemp"></label>
                    <input asp-for="HpTemp" class="form-control" />

                    <label asp-for="Notes"></label>
                    <textarea asp-for="Notes" class="form-control"></textarea>
            

                <button type="submit" class="btn btn-primary">Create</button>
            </form>
        </div>
    </div>
